<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
    <%# <% debugger %> %>
      <%# <% if @user.id == @approval.user_id %> %>
      <td colspan="2"><%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-sm" %>【<%= l(@first_day, format: :middle) %>】時間管理表 <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary btn-sm" %></td>
      <%# <% else %> %>
      <%# <td colspan="2">【<%= l(@first_day, format: :middle) %>】時間管理表 </td> %>
      <%# <% end %> %>
      <td colspan="2">指定勤務開始時間<span class="time-space1"><%= format_basic_info(@user.designated_work_start_time) %></span><br>指定勤務終了時間<span class="time-space1"><%= format_basic_info(@user.designated_work_end_time) %></span></td>
      <td colspan="2">基本時間  <span class="time-space2"><%= format_basic_info(@user.basic_work_time) %></span></td>
      <td>初日  <%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td colspan="2">所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名  <%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数  <%= @worked_sum %>日</td>
      
      
      <td>締め  <%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<% if current_user.superior %>
  <div>
    <% if @user.id == 2 && @month_superior_A != 0 %>
      <%# <% debugger %> %>
      <p class="request"><%= link_to "【所属長承認申請のお知らせ】", edit_month_application_user_approval_path(@user), remote: true, class: "month_superior_color" %><span class="month_superior_color1"><%= @month_superior_A %>件の通知があります。</span></p>
    <% elsif @user.id == 3 && @month_superior_B != 0 %>
      <p class="request"><%= link_to "【所属長承認申請のお知らせ】", edit_month_application_user_approval_path(@user), remote: true, class: "month_superior_color" %><span class="month_superior_color1"><%= @month_superior_B %>件の通知があります。</span></p>
    <% elsif @month_superior_B == 0 %>
      <%= link_to "【所属長承認申請のお知らせ】" , user_path(@user), class: "month_superior_color2"%>
    <% end %> 
    <p class="request">【勤怠変更申請のお知らせ】</p>
    <p class="request">【残業申請のお知らせ】</p>
  </div>
<% end %>

<%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary btn-sm" %>  
<%= link_to "CSV出力", "#", class: "btn btn-primary btn-sm" %><br>  
<%= link_to "勤怠修正ログ(承認済)", "#", class: "btn btn-primary btn-sm" %>  


<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
      <th colspan="3"></th>
      <th colspan="8">【実績】</th>
      <th colspan="5">所定外勤務</th>

      </tr>
      <tr>
        <th rowspan="2">残業申請</th>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
        
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <%# <th></th> %>
        <%# <th></th> %>
        <th>時</th>
        <th>分</th>
        
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
        <td>
        <%# <% debugger %> %>
          <%= link_to "残業申請", "#",remote: true, class: "btn btn-primary btn-sm" %>
          
          </td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 0 %>
             <div class="sunday"><%= $days_of_the_week[day.worked_on.wday] %></div>
            <% elsif day.worked_on.wday == 6 %>
             <div class="saturday"><%= $days_of_the_week[day.worked_on.wday] %></div>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          </td>
          <td colspan="2"><%= l(day.started_at.floor_to(15.minutes), format: :time) if day.started_at.present? %></td>
          <!--<td></td>-->
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-sm" %>
            <% end %>
          </td>
          <td colspan="2"><%= l(day.finished_at.floor_to(15.minutes), format: :time) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td colspan="2"></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <td>
          <%# <% debugger %> 
          <% if current_user == @user %>
           <% if !@approvals.present? %>
            <%= "所属長承認：未" %>
            <% end %>
            <% @approvals.each do |approval| %>
              <% if approval.month_superior.present? && approval.instructor_confirmation.present? %>
                <% if (approval.instructor_confirmation == "承認").present? || (approval.instructor_confirmation == "否認").present? %>
                  <%= "所属長承認：#{approval.month_superior}から#{approval.instructor_confirmation}済" %>
                <% end %>
              <% else %>
                <%= "所属長承認：未" %>
              <% end %>
            <% end %>

            <%= form_with(model: [@user, @approval], local: true) do |f| %>
              <%= f.hidden_field :one_month, value: @first_day %>
              <%= f.select :month_superior, [["上長A", "上長A"],["上長B", "上長B"]], { include_blank: '選択してください'}, class: "form-control" %>
              <div class="center">
                <%= f.submit "申請", class: "btn btn-primary btn-block btn-1" %>
              </div> 
            <% end %>
          <% end %>    
        </td>
      </tr>     
    </tfoot>
  </table>
</div>

